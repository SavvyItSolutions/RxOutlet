@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")




    <script>
  function FillCity() {
    $.ajax({
        url: 'http://localhost:64404/api/Rxoutlet/GetSignUpSecurityQuestions',
        type: "GET",
        dataType: "JSON",
        data: "",
        success: function (securities) {
            $("#Security").html(""); // clear before appending new list
            $.each(securities, function (i, security) {
                $("#Security").append(
                    $('<option></option>').val(security.SecurityQuestionID).html(security.SecurityQuestions));
            });
        }
    });
  }
    </script>



}



