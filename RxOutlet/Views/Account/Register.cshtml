                                                    @*@Html.DropDownList("ListItem", m => m.SecurityQuestionID, "Select Manufacurer")*@
                                                    @*@Html.DropDownListFor(m => m.SecurityQuestionID, new SelectList("ListItem", "Value", "Text"))*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-4">Security Answer</label>
                                                <div class="col-sm-8">

                                                    @Html.TextBoxFor(m => m.SecurityAnswer, new { @class = "form-control", id = "txtSecurityAnswerS" })
                                                    @*<input type="text" class="form-control">*@
                                                </div>
                                            </div>
                                        </div>

                                        <h4>Terms of Use and Privacy Statement</h4>
                                        <div class="bg-info" style="background-color: #f5f5f5;">
                                        


                                            <h5><strong>Terms of Use and Privacy Statement</strong> </h5>     

                                            <p>
                                                @*<input id="Remember" name="Remember" type="checkbox" value="@Model.PrivacyAcceptance" />*@
                                                <label>@Html.CheckBoxFor(m => m.PrivacyAcceptance, new { id = "chkbxPrivacyAcceptance" })  Yes,I have read and accept the <a href="~/DrugImages/terms.pdf" target="_blank" style="text-decoration:underline;">RXOutlet Pharmacy Online Terms of Use </a> and <a href="~/DrugImages/PrivacyPolicy.pdf" target="_blank" style="text-decoration:underline;">Privacy Statement.</a> </label>
                                               
                                                 @*<input type="checkbox" name="checking" value="Yes">Yes,I have read and accept the <a href="privacy.html" style="text-decoration:underline;">RXOutlet Pharmacy Online Terms of Use </a> and <a href="privacy.html" style="text-decoration:underline;">Privacy Statement.</a>*@

                                            </p>

                                        </div>
                                        <br>
                                        <div class="bg-info" style="background-color: #f5f5f5;">
                                            <h5><strong>Privacy Choice (optional)</strong> </h5>
                                            <p>
                                                <label>@Html.CheckBoxFor(m => m.SplOffersEmail, new { id = "chkbxSplOffersEmail" })  Yes,Please Email me the Information from RXOutlet.com about special offers, new products, health information and more!</label>
                                              
                                                @*<input type="checkbox" ame="checking" value="Yes">Yes,Please Email me the Information from RXOutlet.com about special offers, new products, health information and more!*@

                                            </p>

                                            <p>
                                                <label>@Html.CheckBoxFor(m => m.PrescriptionEmail, new { id = "chkbxPrescriptionEmail" }) Yes,Please Email me the Information from RXOutlet.com about my prescriptions.</label>

                                                @*<input type="checkbox" name="checking" value="Yes">Yes,Please Email me the Information from RXOutlet.com about my prescriptions.*@

                                            </p>

                                            @*<p>
                                        <input type="checkbox" name="checking" value="Yes">Remember me on this computer.(Not recommended if on a shared computer.)

                                    </p>*@
                                        </div>
                                        <div class="form-group text-center" style="margin-top:2%" ;>
                                            <input type="submit" class="button" value="Sign Up" />
                                            @*<button class="button"> <a href="user.html" style="color:#ffffff"> <i class="fa fa-lock"></i> Sign up </a> </button>*@
                                        </div>
                                        <div class="form-group text-center">
                                            Already Signup? @Html.ActionLink("Login Here", "Login")
                                        </div>

                                    </div>
                                </form>

                                <div class="col-sm-3">

                                </div>
                            </div>
                        </div>
                    </div>
</div>
        </div>

    </div>

}



