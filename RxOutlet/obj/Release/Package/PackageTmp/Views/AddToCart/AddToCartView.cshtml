
<div class="container">
    <div class="row">
        <div class="block block-breadcrumbs">
            <ul>
                <li class="home">
                    <a href="#"><i class="fa fa-home"></i></a>
                    <span></span>
                </li>
                <li>Cart</li>
            </ul>
        </div>
        <div class="main-page">
            <h1 class="page-title">Shopping Cart Summary</h1>
            <div class="page-content page-order">
               
                <div class="heading-counter warning">
                    Your shopping cart contains:
                    <span>1 Product</span>
                </div>
                <div class="order-detail-content">
                    <table class="cart_summary" ng-controller="CartItemsCntrl">
                        <thead>
                            <tr>
                                <th class="cart_product">Product</th>
                                <th>Description</th>
                                <th>Avail.</th>
                                <th>Unit price</th>
                                <th>Qty</th>
                                <th>Total</th>
                                <th class="action"><i class="fa fa-trash-o"></i></th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="x in CartItems.DrugList">
                            <tr>
                                <td class="cart_product">
                                    <a href="#"><img class="img-responsive" ng-src="/DrugImages/{{x.ImageNum}}.jpg" alt="Product"></a>
                                </td>
                                <td class="cart_description">
                                    <p class="product-name"><a href="#">{{x.DrugName}} </a></p>
                                    <small class="cart_ref">Supplier Name :{{x.SupplierName}}</small><br>
                                    <small><a href="#">Drug Type : {{x.DrugTypename}}</a></small><br>
                                    @*<small><a href="#">Regular Price : {{x.Regu}}</a></small>*@
                                </td>
                                <td class="cart_avail"><span class="label label-success">In stock</span></td>
                                <td class="price"><span>{{x.RegularPrice}} €</span></td>
                                <td class="qty">
                                    <input class="form-control input-sm" type="text" value="{{x.Quantity}}" >
                                    <a href="#"><i class="fa fa-caret-up"></i></a>
                                    <a href="#"><i class="fa fa-caret-down"></i></a>
                                </td>
                                <td class="price">
                                    <span>{{x.RegularPrice}} €</span>
                                </td>
                                <td class="action">
                                    <a href="#">Delete item</a>
                                </td>
                            </tr>
